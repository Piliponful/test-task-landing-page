        //- END ORDER FREE CONSULTATION SECTION
        br
        button(data-remodal-action="cancel").remodal-cancel Cancel
        button(data-remodal-action="confirm").remodal-confirm OK
        //- END MODALS SECTION

      //- BEGIN STATISTIC SECTION
      section.statistic: ul.statistic__list

        li.statistic__item
          p.statistic__digit 3000+
          p.statistic__subtitle.
            Успешно выполненных<br>
            комплексных работ

